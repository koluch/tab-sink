{
  "manifest_version": 2,
  "name": "Tab-sink",
  "description": "Extension to work with tabs",
  "version": "debug",

  "icons": {
    "32": "/static/logo.svg"
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": "static/logo.svg",
    "default_title": "Sink all tabs",
    "theme_icons": [
      {
        "light": "static/logo_light.svg",
        "dark": "static/logo_dark.svg",
        "size": 32
      }
    ]
  },

  "background": {
    "scripts": ["/static/background.js"]
  },

  "permissions": ["storage", "tabs", "downloads", "<all_urls>"]
}
